<%= form_with model: @org, scope: :organisation, url: organisations_path, method: "post", local: true do |f| %>
    <%= f.label :name, "Name: " %>
    <%= f.text_field :name %>
    <%= f.label :hourly_rate, "Hourly Rate: $" %>
    <%= f.text_field :hourly_rate %>
    <%= f.submit "Create and Join" %>
<% end %>
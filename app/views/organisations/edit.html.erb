<h2>Edit Organisation</h2>

<div class="edit-org-form">
    <%= render 'shared/errors' %>
    
    <%= form_with model: @org, local: true do |f| %>
        <%= f.label :name, "Name: " %>
        <%= f.text_field :name %>
        <%= f.label :hourly_rate, "Hourly Rate: $" %>
        <%= f.text_field :hourly_rate %>
        <%= f.submit "Update" %>
    <% end %>
    <%= link_to 'Delete', organisation_path(@org), method: "delete" %>
</div>
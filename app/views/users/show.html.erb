<h1>Adnat</h1>
<p>Logged in as <%= current_user.name %>.   <%= link_to "Log out", logout_path, method: "delete" %></p>
<% if current_user.organisation_id %>
    <h2><%= @orgs.name %></h2>
<% else %>
    <p>You aren't a member of any organisations. <br /> Join an existing one or create a new one.</p>
    <h2>Organisations</h2>
    <ul>
    <% @orgs.each do |org| %>
        <li><%= org.name %> <%= link_to 'Edit', edit_organisation_path(org) %> <%= link_to 'Join', controller: "organisations", action: "join", method: "post", id: org %> </li>
    <% end %>
    </ul>
    <h2>Create Organisation</h2>
    <%= render 'shared/errors' %>
    <%= form_with model: @organisation, scope: :organisation, url: organisations_path, method: "post", local: true do |f| %>
        <%= f.label :name, "Name: " %>
        <%= f.text_field :name %>
        <%= f.label :hourly_rate, "Hourly Rate: $" %>
        <%= f.text_field :hourly_rate %>
        <%= f.submit "Create and Join" %>
    <% end %>
<% end %>